
.guide-container {
  padding: 20px;
}
.alert-section {
  margin-bottom: 20px;
}
.alert-box {
  background-color: #fff3f3;
  border-radius: 8px;
  padding: 15px;
  border: 1px solid #ffcdd2;
}
.alert-title {
  color: #f44336;
  font-weight: bold;
  font-size: 16px;
  display: block;
  margin-bottom: 10px;
}
.alert-content {
  color: #d32f2f;
  font-size: 14px;
  line-height: 1.5;
}
.guide-section {
  background-color: #ffffff;
  border-radius: 8px;
}
.section-item {
  margin-bottom: 20px;
}
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}
.section-content {
  padding: 10px 0;
}
.content-item {
  padding: 8px 0;
  color: #666;
  font-size: 14px;
  line-height: 1.5;
}
.content-item:not(:last-child) {
  border-bottom: 1px solid #f5f5f5;
}

