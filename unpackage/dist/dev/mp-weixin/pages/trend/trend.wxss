
.trend-container {
  padding: 20px;
}
.chart-container {
  width: 100%;
  height: 400px;
  background: #fff;
  border-radius: 8px;
  margin-bottom: 20px;
}
.data-list {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
}
.list-header {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
  font-weight: bold;
}
.header-item {
  flex: 1;
  text-align: center;
  color: #333;
}
.list-content {
  margin-top: 10px;
}
.list-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}
.item-cell {
  flex: 1;
  text-align: center;
  color: #666;
}

